#!/bin/sh
#  ____     _ 
# |  _ \   | |
# | |_) |  | |
# |  __/ |_| |
# |_|   \___/ 
#             

set -e

null='â™¦'
test='1.1.1.1'
sep="|"

if [ -z ${1} ]; then
	dev=enp46s0
else
	dev=$1
fi

mess=$(ping -c 1 ${test} \
	| grep bytes \
	| grep -v PING \
	| awk -F '=' '{print $NF;}' \
	| grep '^[0-9]' \
	| awk '{print $1;}'
)

if [ -z "${mess}" ]; then
	ping="${null}"
else
	ping="${mess}ms"
fi

printf "${ping}"
