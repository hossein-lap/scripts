set -e

null=â™¦
test='1.1.1.1'

if [ -z ${1} ]; then
	dev=enp46s0
else
	dev=$1
fi

mess=$(ping -c 1 ${test} \
	| grep bytes \
	| grep -v PING \
	| awk -F '=' '{print $NF;}' \
	| grep '^[0-9]')

if [ $(echo $mess | awk '{print $NF}') = 'ms' ]; then
	ping=$(echo "${mess}" | awk '{print $1"ms";}')
else
	ping=
fi

printf "${ping}"
