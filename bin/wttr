	# curl -s "wttr.in/${location}?0&format=%c+%t" 2>/dev/null  \
	curl "wttr.in/${location}?0dq&lang=en&format=j1" 2>/dev/null \
		&& printf ' ' \
		|| printf "â™¦"
	# echo
}

wttr "Langarud" # > /tmp/wttr.json


